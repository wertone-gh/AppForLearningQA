<Window x:Class="EasyApplicationForTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Test application" Height="378" Width="177">
    <StackPanel>
        <Label>Liczba nr 1</Label>
        <TextBox Name="numberOneTextBox" Width="120" Margin="0 0 0 10" />
        <Label>Liczba nr 2</Label>
        <TextBox Name="numberTwoTextBox" Width="120" Margin="0 0 0 10" />
        <Label>Operacje</Label>
        <Button Content="Dodawanie" Width="120" Margin="0 0 0 5" Click="addButton_Click" />
        <Button Content="Odejmowanie" Width="120" Margin="0 0 0 5" Click="subButton_Click" />
        <Button Content="Mnożenie" Width="120" Margin="0 0 0 5" Click="mulButton_Click" />
        <Button Content="Dzielenie" Width="120" Margin="0 0 0 10" Click="divButton_Click" />
        <Label>Wynik</Label>
        <TextBox IsReadOnly="True" Name="resultTextBox" Width="120" Margin="0 0 0 30" />
        <Button Content="Wyjdź z aplikacji" Width="120" Margin="0 0 0 10" />
    </StackPanel>
</Window>